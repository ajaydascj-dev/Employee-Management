<%- include('./layouts/signinheader'); %> <%- include('./partials/message') %>

<div class="container" id="container">
  <div class="form-container sign-up-container">
    <form action="signUp/sendOtp" method="post" name="signupForm">
      <h1>Create Account</h1>
      <span>use your email for registration</span>
      <input
        type="text"
        id="signup_name"
        placeholder="Name"
        name="name"
        onkeyup="nameVerification(this)"
      />
      <p class="error" id="email_error"></p>
      <input
        type="email"
        id="signup_email"
        placeholder="Email"
        name="email"
        onkeyup="emailValidation(this)"
      />
      <p class="error" id="email_error"></p>
      <input
        type="password"
        id="signup_password"
        placeholder="Password"
        name="password"
        onkeyup="passwordVerfication(this)"
      />
      <p class="error" id="email_error"></p>

      <button id="otp_ver">Sign Up</button>
    </form>
  </div>

  <div class="form-container sign-in-container">
    <form action="login" method="post">
      <h1>Sign in</h1>
      <span>or use your account</span>
      <input
        type="email"
        id="singin_email"
        placeholder="Email"
        name="email"
        onkeyup="emailValidation(this)"
      />
      <p class="error" id="email_error"></p>
      <input
        type="password"
        id="signin_password"
        placeholder="Password"
        name="password"
        onkeyup="passwordVerfication(this)"
      />
      <p class="error" id="pass_error"></p>
      <a href="#">Forgot your password?</a>
      <button id="sign_in" type="submit">Sign In</button>
    </form>
  </div>
  <div class="overlay-container">
    <div class="overlay">
      <div class="overlay-panel overlay-left">
        <h1>Welcome Back!</h1>
        <p>To keep connected with us please login with your personal info</p>
        <button class="ghost" id="signIn" onclick="modifyState(`user/login`)">
          Sign In
        </button>
      </div>
      <div class="overlay-panel overlay-right">
        <h1>Hello, Explorer!</h1>
        <p>Enter your personal details and start journey with us</p>
        <button class="ghost" id="signUp">Sign In</button>
      </div>
    </div>
  </div>
</div>

<%- include('./layouts/signInfooter'); %>
